<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banco_negro"
    tools:context=".fragments.PostularmeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewr38"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="188dp"
        android:autofillHints="  Ingrese nuevamente una contraseña"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/InRubro"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@color/rosa_para_input"
                android:backgroundTint="#00AA3E3E"
                android:ems="10"
                android:hint="  Seleccione su rubro" />

            <ImageView
                android:id="@+id/imgRubro"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#806C6565"
                android:padding="10dp"

                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:tint="#FFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewr8"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:autofillHints="  Ingrese nuevamente una contraseña"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewr38">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/InFechaDeNacimiento"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@color/rosa_para_input"
                android:backgroundTint="#00AA3E3E"
                android:ems="10"
                android:hint="  Adjunte su CV"
                android:inputType="textEmailAddress" />

            <ImageView
                android:id="@+id/imgGenero"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#806C6565"
                android:padding="10dp"

                app:srcCompat="@drawable/ic_attach_file_fill0_wght400_grad0_opsz48"
                app:tint="#FFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnEnviarCv"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"

        android:layout_marginBottom="116dp"
        android:backgroundTint="@color/deep_purple_500"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Enviar CV"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />
</androidx.constraintlayout.widget.ConstraintLayout>