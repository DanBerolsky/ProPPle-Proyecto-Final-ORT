<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banco_negro"
    tools:context=".fragments.clientePrestador.PublicarServicioFragment">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txvInTituloServicioPS"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:text="Título del servicio *"
            android:textColor="@color/negro_blaco" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            android:autofillHints="  Ingrese nuevamente una contraseña"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/InTituloServicio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/rosa_para_input"
                    android:backgroundTint="#00AA3E3E"
                    android:ems="10"
                    android:hint="Título del servicio"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txvInDescripcionServicioPS"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Descripción del servicio *"
            android:textColor="@color/negro_blaco" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            android:autofillHints="  Ingrese nuevamente una contraseña"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="113dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/InDescripcionServicio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/rosa_para_input"
                    android:backgroundTint="#00AA3E3E"
                    android:ems="10"
                    android:hint="Descripción del servicio"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txvInPrecioHoraPS"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Precio por hora *"
            android:textColor="@color/negro_blaco" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"

            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="170dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/InPrecioHora"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/rosa_para_input"
                    android:backgroundTint="#00AA3E3E"
                    android:ems="10"
                    android:hint="Precio por hora"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txvInDireccionLaboralPS"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:padding="3dp"
            android:text="Dirección laboral *"
            android:textColor="@color/negro_blaco" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView27"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:autofillHints="  Ingrese nuevamente una contraseña"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvinDireccionLaboral">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/autocomplete_fragment1"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="invisible"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/textDirecion"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="Dirección laboral"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="0dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/InDirecion"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@color/rosa_para_input"
                    android:backgroundTint="#00AA3E3E"
                    android:clickable="false"
                    android:editable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Ingrese su direccion"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ll1"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="14sp"
                android:textSize="16sp"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnEnviarReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/deep_purple_500"
        android:text="Publicar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

</androidx.constraintlayout.widget.ConstraintLayout>