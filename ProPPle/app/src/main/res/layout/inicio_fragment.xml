<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banco_negro"
    android:backgroundTint="@color/banco_negro"
    tools:context=".fragments.inicioFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="235dp"
        android:layout_height="168dp"
        android:layout_marginTop="100dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#034C4949"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deep_purple_500"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="sans-serif-thin"
                    android:text="@string/propple"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="60sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="219dp"
        android:layout_height="65dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/deep_purple_500"
        android:contentDescription="@string/iniciar_sesi_n"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/registrarse"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciar_sesión" />

    <Button
        android:id="@+id/btnIniciar_sesión"
        android:layout_width="219dp"
        android:layout_height="65dp"
        android:layout_marginTop="107dp"
        android:backgroundTint="@color/deep_purple_500"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/iniciar_sesi_n"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

</androidx.constraintlayout.widget.ConstraintLayout>