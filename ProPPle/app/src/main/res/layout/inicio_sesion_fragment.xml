<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/banco_negro"
    tools:context=".fragments.InicioSesionFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="235dp"
        android:layout_height="168dp"
        android:layout_marginTop="48dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#034C4949"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deep_purple_500"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="sans-serif-thin"
                    android:text="Propple"
                    android:textAlignment="center"
                    android:textColor="#F3EFEF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="60sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:text="Ingrese su correo electrónico"
                android:textColor="@color/negro_blaco" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="350dp"
                android:layout_height="50dp"

                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/InMail"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:background="@color/rosa_para_input"
                        android:backgroundTint="#00AA3E3E"
                        android:ems="10"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#806C6565"
                        android:padding="10dp"
                        android:src="@drawable/ic_baseline_email_24"
                        app:srcCompat="@drawable/ic_baseline_email_24"
                        app:tint="#FFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:padding="3dp"
                android:text="Ingrese una Contraseña"
                android:textColor="@color/negro_blaco" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView52"
                android:layout_width="350dp"
                android:layout_height="50dp"

                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/InContrasenia"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:background="@color/rosa_para_input"
                        android:backgroundTint="#00AA3E3E"
                        android:ems="10"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp" />

                    <ImageView
                        android:id="@+id/btnVerContra1"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#806C6565"
                        android:padding="10dp"

                        app:srcCompat="@drawable/ic_baseline_remove_red_eye_24"
                        app:tint="#FFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnOlvide"
        android:layout_width="229dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:text="Olvide mi contraseña"
        android:textAlignment="center"
        android:textColor="@color/rosa_para_input"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/btnIniciar_sesión"
        android:layout_width="220dp"
        android:layout_height="60dp"

        android:layout_marginTop="24dp"
        android:backgroundTint="@color/deep_purple_500"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/iniciar_sesi_n"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOlvide" />
</androidx.constraintlayout.widget.ConstraintLayout>