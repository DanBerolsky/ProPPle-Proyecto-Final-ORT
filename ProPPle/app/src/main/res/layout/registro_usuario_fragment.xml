                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dirección *" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView27"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:autofillHints="  Ingrese nuevamente una contraseña"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.405"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="357dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <fragment
                        android:id="@+id/autocomplete_fragment1"
                        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        tools:visibility="invisible" />

                    <TextView
                        android:id="@+id/textDirecion"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="Ingrese Dirección"
                        android:padding="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="0dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/InDirecion"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@color/rosa_para_input"
                        android:backgroundTint="#00AA3E3E"
                        android:clickable="false"
                        android:editable="true"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Ingrese su direccion"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnUbicacion"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#806C6565"
                        android:padding="10dp"

                        app:srcCompat="@drawable/ic_baseline_location_on_24"
                        app:tint="#FFF" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/ll1"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="14sp"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txvInContrasenia1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Clave *" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView52"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_margin="0dp"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.405"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="482dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/InContrasenia1"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
